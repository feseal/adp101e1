import os ;
import option ;
import modules ;
import path ;

path-constant prefix : [ option.get "prefix" : "/usr" : ] ;

path-constant elfio-path : [ option.get "elfio-path" : "../elfio-2.2" : ] ;

lib boost_system ;
lib boost_thread ;
lib boost_filesystem ;
lib boost_program_options ;
using gcc ;

project : requirements
          <library>boost_system
          <library>boost_thread
          <library>boost_filesystem
          <library>boost_program_options
          <threading>multi
          <variant>release
          <include>$(elfio-path) ;

exe brdinit : brdinit.cpp udp_bus.cpp b101e1ngu.cpp boot_loader.cpp ;

exe brdread : brdread.cpp ;

install dist : brdinit brdread : <location>$(prefix)/bin ;
